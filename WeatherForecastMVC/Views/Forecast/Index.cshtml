@model APIForecastModel

<div class="d-flex flex-column forecast-container shadow-lg">
    <div class="d-flex flex-column flex-grow-1 forecast-current-container text-white">
        <div class="d-flex justify-content-between pt-2 ps-4">
            <div>
                <span>
                    <a asp-controller="Home" asp-action="Index" class="forecast-return">Voltar</a>
                </span>
            </div>
        </div>
        <div class="d-flex flex-column flex-grow-1 ps-4 pe-4 pt-2 pb-2 ">
            <div class="d-flex flex-column">
                <p class="fw-bold fs-2">@DateTime.Parse(Model.Localtime).ToString("dddd")</p>
                <p class="forecast-date">@DateTime.Parse(Model.Localtime).ToString("dd MMMM, yyyy")</p>
            </div>
            <div class="align-items-center d-flex flex-grow-1 gap-3">
                <span class="forecast-degrees fw-bold">@Model.CelsiusTemperature°C</span>
                <div class="d-flex flex-column">
                    <span class="fs-4">@Model.Condition</span>
                    <span>@Model.City, @Model.Country</span>
                </div>
            </div>
        </div>
    </div>

    <div class="forecast-daily-container d-flex gap-1">
        @foreach (var item in Model.ForecastList)
        {
            <div class="align-items-center d-flex flex-column flex-grow-1 forecast-daily-item gap-1">
                <p class="forecast-daily-item-title fw-bold">@item.Date.ToString("dddd").ToUpper()</p>
                <img src="https://icons.veryicon.com/png/System/iOS%207/Weather%20Partly%20Cloudy%20Day.png" class="flex-grow-1 forecast-daily-item-condition" alt="@item.Condition" />
                <div class="d-flex flex-column">
                    <p class="forecast-daily-item-temp">@item.MaxTempCelsius°C</p>
                    <p class="forecast-daily-item-temp">@item.MinTempCelsius°C</p>
                </div>
            </div>
        }
    </div>
</div>